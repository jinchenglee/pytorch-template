{
    "name": "MyNet",
    "n_gpu": 3,
    
    "arch": {
        "type": "MyModel",
        "args": {
            "num_classes" : 4
        }
    },
    "data_loader": {
        "type": "MyDataLoader",
        "args":{
            "data_dir": "data/",
            "train_csv_file": "train_overfit.csv",
            "test_csv_file": "train_overfit.csv",
            "batch_size": 7,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 6,
            "training" : true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "precision", "recall"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
